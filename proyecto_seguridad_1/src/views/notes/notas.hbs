<div class="row">
    {{#each notas}}
    <div class="col-md-3">
        <div class="card mt-5">
            <div class="card-body note_color">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{titulo}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{descripcion}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <div>
                        <center>
                            <button class="btn btn-danger btn-sm" type="submit">
                                Borrar
                            </button>
                        </center>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto mt-5">
        <div class="card-body">
            <p class="lead text-center note_color">Aun no tienes notas</p>
            <center>
                <a href="/notes/add" class="btn btn-success">Crea una </a>        
            </center>
        </div>
    </div>
    {{/each}}
</div>